<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEdu.Pages.AddDocente_GrupoPage"
             xmlns:local="clr-namespace:AppEdu.ViewModels.Docente_GrupoVM"
             Title="AddDocente_GrupoPage">
    <VerticalStackLayout>
        <Picker x:Name="pckNombreDocente"/>
        <Picker x:Name="pckGrupo"/>
        <Button x:Name="btnAgregarDocenteGrupo" Text="Agregar" Command="{Binding GuardarDocenteGrupoCommand}" Clicked="btnAgregarDocenteGrupo_ClickedAsync"/>
        <Button x:Name="btnCancelar" Text="Cancelar" Clicked="btnCancelar_ClickedAsync"/>
    </VerticalStackLayout>
</ContentPage>