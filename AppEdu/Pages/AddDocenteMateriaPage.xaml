<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEdu.Pages.AddDocenteMateriaPage"
             xmlns:local="clr-namespace:AppEdu.ViewModels.DocenteMateriaVM"
             Title="AddDocenteMateriaPage">
    <VerticalStackLayout>
        <StackLayout Orientation="Horizontal" Spacing="10">
            <Picker x:Name="pckDocenteGrupo"/>
            <Picker x:Name="pckAsignatura"/>
        </StackLayout>
        <Button x:Name="btnAgregarDocenteMateria" Text="Agregar" Clicked="btnAgregarDocenteMateria_ClickedAsync"/>
        <Button x:Name="btnCancelar" Text="Cancelar" Clicked="btnCancelar_ClickedAsync"/>
    </VerticalStackLayout>
</ContentPage>